<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <style>
        body {
            padding-top: 5rem;
        }
    </style>
    <title>HttpSession Demo</title>
</head>
<body>
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="/">HttpSession Demo</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
            aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
        </ul>
        <form class="form-inline" method="post" action="/logout">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <button class="btn" type="submit">Logout</button>
        </form>
    </div>
</nav>
<main role="main" class="container">
    <!--<h1>HttpSession Demo</h1>-->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Session info</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{sessionRepositoryType}}</h6>
            <div class="card-text">
                <dl class="row">
                    <dt class="col-sm-3">id</dt>
                    <dd class="col-sm-9">{{sessionId}}</dd>

                    <dt class="col-sm-3">creation time</dt>
                    <dd class="col-sm-9">{{sessionCreationTime}}</dd>

                    <dt class="col-sm-3">last accessed time</dt>
                    <dd class="col-sm-9">{{sessionLastAccessedTime}}</dd>

                    <dt class="col-sm-3">max inactive interval</dt>
                    <dd class="col-sm-9">{{sessionMaxInactiveInterval}}</dd>

                    <dt class="col-sm-3">attributes</dt>
                    <dd class="col-sm-9">
                        <dl class="row">
                        {{#sessionAttributes}}<dd class="col-sm-12 text-truncate">{{this}}</dd>{{/sessionAttributes}}
                        </dl>
                    </dd>

                    <dt class="col-sm-3">scoped bean</dt>
                    <dd class="col-sm-9">
                        <a class="btn btn-secondary" href="/scoped-bean" role="button">invoke</a>
                    </dd>

                    <dt class="col-sm-3">binding listener</dt>
                    <dd class="col-sm-9">
                        <a class="btn btn-secondary" href="/bind" role="button">bind</a>
                        <a class="btn btn-secondary" href="/unbind" role="button">unbind</a>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</main>
</body>
</html>
